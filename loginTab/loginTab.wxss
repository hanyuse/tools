.item{
  padding:0 20rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.split{
  box-sizing: border-box;
  width: 95%;
  margin-left:20rpx;
  border-top:2rpx solid #e6e6e6; 
}

.slot{
  width: 100%;
  height:30rpx;
}

.between-center{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.padding{
  padding:20rpx 0;
}

.avatar{
  width:100rpx;
  height:100rpx;
}

.userInfo{
  display: flex;
  box-sizing: border-box;
  width:100%;
  justify-content: space-between;
  align-items: center;
}

.mainInfo{
  display: flex;
  align-items: center;
}

.column-center{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}