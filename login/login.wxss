.item{
  width:100%;
  box-sizing: border-box;
  overflow: hidden;
  padding:0 20rpx;
  background-color: #ffffff;
}

.split{
  box-sizing: border-box;
  width: 95%;
  margin-left:20rpx; 
}

.slot{
  width: 100%;
  height:30rpx;
}

.between-center{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.padding{
  padding:20rpx 0;
}

.avatar{
  width:100rpx;
  height:100rpx;
}

.userInfo{
  display: flex;
  box-sizing: border-box;
  width:100%;
  justify-content: space-between;
  align-items: center;
}

.mainInfo{
  display: flex;
  align-items: center;
}